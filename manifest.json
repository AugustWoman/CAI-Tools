{
    "manifest_version": 3,
    "name": "CAI Tools",
    "description": "Various tools for Character AI website.",
    "version": "1.2.1",
    "icons": {
        "128": "/logo128.png"
    },
    "permissions": [
        "contextMenus",
        "webNavigation"
    ],
    "background": {
        "service_worker": "/scripts/background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "/scripts/xhook.min.js",
                "/ReadOffline.html",
                "/ReadCharSettings.html"
            ],
            "matches": [
                "https://beta.character.ai/*"
            ]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "https://beta.character.ai/*"
            ],
            "js": [
                "/scripts/content.js"
            ],
            "css": [
                "/style/main.css"
            ],
            "run_at": "document_end"
        }
    ]
}