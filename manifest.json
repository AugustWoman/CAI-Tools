{
    "manifest_version": 3,
    "name": "CAI History",
    "description": "This extension allows you to download the chat history of your character from Character AI website in various forms.",
    "version": "0.1",
    "permissions": [
        "webNavigation",
        "tabs",
        "contextMenus",
        "scripting"
    ],
    "host_permissions": [
        "https://beta.character.ai/*"
    ],
    "background": {
        "service_worker": "/scripts/background.js"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "/scripts/xhook.min.js",
                "/ReadOffline.html"
            ],
            "matches": [
                "https://beta.character.ai/*"
            ]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "https://beta.character.ai/*"
            ],
            "js": [
                "/scripts/content.js"
            ],
            "css": [
                "/style/main.css"
            ],
            "run_at": "document_end"
        }
    ]
}